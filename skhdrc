# Spaces:  CMD + [NUM]

# web
cmd - 1 : source ~/.config/skhd/helpers.sh && focus_space_with_app 1 "Brave Browser" "/Applications/Brave Browser.app"

# code
cmd - 2 : source ~/.config/skhd/helpers.sh && focus_space_with_app 2 "iTerm2" "/Applications/iTerm.app"

# work
cmd - 3 : source ~/.config/skhd/helpers.sh && focus_space_with_app 3 "Slack" "/Applications/Slack.app"

# communication (multiple apps)
cmd - 4 : source ~/.config/skhd/helpers.sh && focus_space_with_apps 4 "Messages:/System/Applications/Messages.app" "Mail:/System/Applications/Mail.app"

# music
cmd - 5 : source ~/.config/skhd/helpers.sh && focus_space_with_app 5 "Music" "/System/Applications/Music.app"

# claude
cmd - 6 : source ~/.config/skhd/helpers.sh && focus_space_with_app 6 "Claude" "/Applications/Claude.app"

# misc
cmd - 7 : source ~/.config/skhd/helpers.sh && focus_space_with_app 7 "Finder" "/System/Library/CoreServices/Finder.app"

# entertainment
cmd - 8 : source ~/.config/skhd/helpers.sh && focus_space_with_app 8 "Stremio" "/Applications/Stremio.app"

# free (no app association)
cmd - 9 : /opt/homebrew/bin/yabai -m space --focus 9

# Reload yabai and skhd
shift + cmd - r : /opt/homebrew/bin/yabai --restart-service && /opt/homebrew/bin/skhd --restart-service
